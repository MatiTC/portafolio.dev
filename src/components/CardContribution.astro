---
import ButtonLink from './ButtonLink.astro';
import GitHub from './icons/GitHub.astro';
import WebSite from './icons/WebSite.astro';

const { title, description, by, date, link, githubmy, color } = Astro.props;
---

<div class="opacity-80">
  <div class=`text-xl font-bold tracking-tight
      ${color} dark:text-white`>
    {title}
  </div>

  <time class="block mb-2 mt-2 px-2 text-sm font-normal leading-none"
    >{date}</time
  >
  <p class="block mb-2 mt-2 px-2 text-sm font-normal leading-none">
    by: {by}
  </p>

  <hr class="my-2 border-white opacity-80 lg:my-2" />
  <p class="mb-2 pt-2 text-base font-normal h-32 text-md text-gray-100 text-pretty">
    {description}
  </p>
  <hr class="my-2 border-white opacity-80 lg:my-2" />

  <div class="p-2 flex flex-row justify-center">
    <ButtonLink href={link}>
      <WebSite class="size-6" />
      Web
    </ButtonLink>
    <ButtonLink href={githubmy}>
      <GitHub class="size-6" />
      My GitHub
    </ButtonLink>
  </div>
</div>
