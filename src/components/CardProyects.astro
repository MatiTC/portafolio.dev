---
import ButtonLink from './ButtonLink.astro';
import GitHub from './icons/GitHub.astro';
import WebSite from './icons/WebSite.astro';
const { title, descripcion, link, github, image, alt, estado, tags } =
  Astro.props;
---

<img class="rounded-tl-g" src={image} alt={alt} />
<div class="p-5">
  <h5
    class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
  >
    {title}
  </h5>
  <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{descripcion}</p>
</div>
<ul class="flex gap-x-2 flex-row mb-2">
  {
    tags.map((tag: any) => (
      <li class="relative group">
        <span class={`flex gap-x-2 rounded-full text-xs ${tag.class}`}>
          <tag.icon class="size-6" />
        </span>
      </li>
    ))
  }
</ul>
<p class="p-5 text-red-950">{estado}</p>
<div class="p-5">
  <ButtonLink href={github}>
    <GitHub class="size-6">GitHub</GitHub>
  </ButtonLink>
  <ButtonLink href={link}>
    <WebSite class="size-6">Visitar</WebSite>
  </ButtonLink>
</div>
