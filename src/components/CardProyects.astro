---
import ButtonLink from './ButtonLink.astro';
import GitHub from './icons/GitHub.astro';
import WebSite from './icons/WebSite.astro';
import Separacion from './Separacion.astro';
const { title, descripcion, link, github, image, alt, estado, tags } =
  Astro.props;
---

<div class="flex flex-col flex-center w-auto opacity-90">
  <img
    class="rounded-tl-g w-max h-48 border-solid border-2 border-blue-200"
    src={image}
    alt={alt}
  />
  <div class="py-4 px-2 flex flex-col justify-start">
    <div class="mb-2 text-xl font-medium text-900">
      {title}
    </div>
    <p class="mt-0 mb-3 font-normal text-white opacity-80 text-pretty">
      {descripcion}
    </p>
  </div>
  <hr class="my-2 border-white opacity-80 lg:my-2" />
  <div class="p-4 flex flex-col justify-start">
    <div class="flex justify-start mb-4">Tecnologias</div>
    <ul class="flex justify-start gap-x-2 flex-row mb-2">
      {
        tags.map((tag: any) => (
          <li class="relative group">
            <span class={`flex gap-x-2 rounded-full text-xs ${tag.class}`}>
              <tag.icon class="size-6" />
            </span>
          </li>
        ))
      }
    </ul>
  </div>
  <div class="p-4 flex flex-col justify-start">
    <div>Estado del proyecto</div>
    <p class="p-2 ">{estado}</p>
  </div>
  <div class="p-5">
    <ButtonLink href={github}>
      <GitHub class="size-6" />
      GitHub
    </ButtonLink>
    <ButtonLink href={link}>
      <WebSite class="size-6"></WebSite>
      Web
    </ButtonLink>
  </div>
</div>
