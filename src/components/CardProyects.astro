---
import ButtonLink from './ButtonLink.astro';
import GitHub from './icons/GitHub.astro';
import Lock from './icons/Lock.astro';
import LockOpen from './icons/LockOpen.astro';
import WebSite from './icons/WebSite.astro';
import Separacion from './Separacion.astro';
const { title, descripcion, link, github, image, alt, estado, tags } =
  Astro.props;
---

<div class="flex flex-col w-auto opacity-90">
  <img
    class="rounded-tl-g w-max h-48 border-solid border-2 border-blue-200"
    src={image}
    alt={alt}
  />
  <div class="flex flex-col justify-start p-4 px-2 h-40">
    <div class="text-xl font-medium text-900 mb-2">
      {title}
    </div>
    <p class="mt-0 mb-3 font-normal text-white opacity-80 text-pretty">
      {descripcion}
    </p>
  </div>

  <hr class="my-2 border-white opacity-80 lg:my-2" />

  <div class="flex flex-col justify-start p-4 px-2">
    <div class="flex justify-start text-900 mb-2">Tecnologias</div>
    <ul class="flex justify-start gap-x-2 flex-row mb-2">
      {
        tags.map((tag: any) => (
          <li class="relative group ">
            <span
              class={`flex gap-x-2 hover:bg-current hover:opacity-80 rounded-full text-xs bg-[#2a323d] ${tag.class}`}
            >
              <tag.icon class="size-6" />
            </span>
          </li>
        ))
      }
    </ul>
  </div>
  <hr class="my-2 border-white opacity-80 lg:my-2" />

  <div class="flex flex-col justify-start p-4 px-2">
    <div class="flex justify-start text-900 mb-2">Estado del proyecto</div>
    <div class="flex flex-row justify-start">
      {estado === 'Privado' ? <Lock /> : <LockOpen />}
      <p class="mt-1 mx-2 font-normal text-white opacity-80 text-pretty">{estado}</p>
    </div>
  </div>

  <div class="p-2 flex flex-row justify-center">
    <ButtonLink href={github}>
      <GitHub class="size-6" />
      GitHub
    </ButtonLink>
    <ButtonLink href={link}>
      <WebSite class="size-6" />
      Web
    </ButtonLink>
  </div>
</div>
