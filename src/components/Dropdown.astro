---
import ThemeToggler from './ThemeToggler.astro';
import Sandwich from './icons/Sandwich.astro';
const { efecto } = Astro.props;
---

<button
  id="dropdownDefaultButton"
  data-dropdown-toggle="dropdown"
  class={` rounded-md ${efecto}  dark:text-slate-100 focus:outline-none font-medium  text-sm text-center inline-flex items-center      sm:hidden`}
  type="button"
>
  <Sandwich />
</button>

<!-- Dropdown menu -->
<div
  id="dropdown"
  class="z-10 dark:text-slate-100
  text-slate-800
  dark:bg-stone-900
  bg-stone-300 sm:hidden divide-y divide-gray-100 rounded-lg shadow w-44"
>
  <ul
    class="py-2 text-sm text-gray-700 dark:text-gray-200"
    aria-labelledby="dropdownDefaultButton"
  >
    <li>
      <a
        href="/#top"
        class="block px-4 py-2 hover:bg-white/30 dark:hover:bg-white/10 transition text-sm sm:text-base"
        >Inicio</a
      >
    </li>
    <li>
      <a
        href="/#experiencia"
        class="block px-4 py-2 hover:bg-white/30 dark:hover:bg-white/10 transition text-sm sm:text-base"
        >Experiencias</a
      >
    </li>
    <li>
      <a
        href="/#contribuciones"
        class="block px-4 py-2 hover:bg-white/30 dark:hover:bg-white/10 transition text-sm sm:text-base"
        >Estudios</a
      >
    </li>
    <li>
      <a
        href="/#sobre-mi"
        class="block px-4 py-2 hover:bg-white/30 dark:hover:bg-white/10 transition text-sm sm:text-base"
        >Sobre m√≠</a
      >
    </li>
    <li><div class="px-4 py-2"><ThemeToggler /></div></li>
  </ul>
</div>
