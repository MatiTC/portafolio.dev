---
import ThemeToggler from './ThemeToggler.astro';
import Dropdown from './Dropdown.astro';

const efectoHoverEpico =
  'dark:hover:bg-white/10 hover:bg-white/30  rounded-full px-2 sm:px-3 transition text-sm sm:text-base';
---

<header
  class={`
    flex lg:justify-end justify-center items-center
    mx-auto
    py-5
    sticky top-0
    w-full xl:w-[1120px]
    z-10
  `}
>
  <nav
    class={`
      border
      font-semibold
      rounded-full
      px-3
      py-1
      flex
      flex-row
      items-center
      backdrop-blur-2xl
      dark:border-black
      borde-white
      dark:text-slate-100
      text-slate-800
      dark:bg-stone-900
      bg-stone-300
      lg:flex
      sm:flex
      md:flex
      sm:items-center
      sm:space-x-4
    `}
  >
    <div
      class={`
        hidden
        sm:flex
        font-semibold
        rounded-full
        px-3
        py-1
        items-center
        backdrop-blur-2xl
        dark:border-black
        border-white
        dark:text-slate-100
        text-slate-800
        dark:bg-stone-900
        bg-stone-300
      `}
    >
      <a class={efectoHoverEpico} href="/#top">Inicio</a>
      <a class={efectoHoverEpico} href="/#experiencia">Experiencias</a>
      <a class={efectoHoverEpico} href="/#proyectos">Proyectos</a>
      <a class={efectoHoverEpico} href="/#contribuciones">Estudios</a>
      <a class={efectoHoverEpico} href="/#sobre-mi">Sobre m√≠</a>
      <ThemeToggler />
    </div>
    <Dropdown efecto={efectoHoverEpico} />
  </nav>
</header>
