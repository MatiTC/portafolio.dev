---
import AboutMe from '../components/AboutMe.astro';
import Badge from '../components/Badge.astro';
import Contribution from '../components/Contribution.astro';
import GitHub from '../components/icons/GitHub.astro';
import Layout from '../layouts/Layout.astro';
import LinkedIn from '../components/icons/LinkedIn.astro';
import Mail from '../components/icons/Mail.astro';
import Proyects from '../components/Proyects.astro';
import SectionCompone from '../components/SectionCompone.astro';
import SocialPill from '../components/icons/SocialPill.astro';
import TimelineExp from '../components/TimelineExp.astro';
import Separacion from '@/components/Separacion.astro';
---

<Layout
  title="Portafolio de Matias Tardones C. Desarrollador y Programador Web"
  descripcion="Desarrollador trainee. Con ganas de obtner experincias como desarrollador"
  '
>
  <main class="px-4">
    <SectionCompone id="top" class="py-36 pb-44">
      <div class="flex flex-row justify-center">
        <div class="w-1/4 flex flex-row justify-end items-center">
          <img
            class="rounded-full size-32 mb-4 mx-8
            ring-2 ring-[#76564a]"
            src="mumei.jpg"
            alt="matias phote"
          />
        </div>
        <div class="w-3/4 flex flex-col px-4">
          <h1
            class="text-white text-2xl font-bold pb-2 flex flex-col gap-x-4
            md:text-3xl"
          >
            Matias Tardones C.
          </h1>
          <span class="text-[#76564a] pb-2 font-bold text-2xl">
            Trainee Desarrollador Web</span
          >
          <span class="text-xl lg:text-1xl opacity-80 text-wrap max-w-[700px]">
            Titulado de Ingeniería en Computación e Informática en la <span
              class="text-[#096092] font-bold">Universidad del Bío-Bío</span
            > de Chile
          </span>
        </div>
      </div>
      <nav class="flex justify-center gap-x-4 mt-8 flex-wrap">
        <SocialPill
          href="https://www.linkedin.com/in/matias-tardones-ceballos-50785b259/"
        >
          <LinkedIn class="size-4 md:size-6" />LinkeIn
        </SocialPill>
        <SocialPill href="https://github.com/MatiTC">
          <GitHub class="size-4 md:size-6" /> GitHub
        </SocialPill>
        <SocialPill href="mailto:mtardones99@gmail.com">
          <Mail class="size-4 md:size-6" /> mtardones99@gmail.com
        </SocialPill>
        <Badge>Open to Work</Badge>
      </nav>
      
    </SectionCompone>
    <SectionCompone id="experiencia">
      <Separacion/>
        <h2 class="text-3xl font-bold mb-2 mt-2 opacity-80  text-gray-100">>> Experiencia</h2>
      <TimelineExp />

    </SectionCompone>

    <SectionCompone id="proyectos">
      <Separacion/>
      <h2 class="text-2xl font-semibold mb-2">>>Proyectos</h2>
      <Proyects />
    </SectionCompone>

    <SectionCompone id="Contribuciones">
      <Separacion/>
      <h2 class="text-2xl font-semibold mb-2">>>Contribuciones y estudios</h2>
      <Contribution />
    </SectionCompone>

    <SectionCompone id="sobre-mi">
      <Separacion/>
      <h2 class="text-2xl font-semibold mb-2">>>Contribuciones y estudios</h2>
      <AboutMe />
    </SectionCompone>
  </main>
</Layout>
